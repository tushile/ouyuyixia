.main {
  background: #31353e 100% 100%;
  background-size: cover;
  width: 750rpx;
}

.mjz {
  width: 100%;
  height: 750rpx;
}

.mjz image {
  width: 100%;
  height: 100%;
}

.shafa {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  border-radius: 70rpx;
  padding: 20rpx;
  box-shadow: 0 0 20px #fff;
}

.shafahover {
  background-color: rgb(182, 176, 176);
}

.shafa1 {
  top: 210rpx;
  left: 130rpx;
  transform: rotate(337deg);
}

.shafa2 {
  top: 210rpx;
  left: 460rpx;
  transform: rotate(25deg);
}

.shafa3 {
  top: calc(38% + 10rpx);
  left: 110rpx;
  transform: rotate(217deg);
}

.shafa4 {
  top: calc(38% + 30rpx);
  left: calc(60% + 40rpx);
  transform: rotate(137deg);
}

.detail {
  width: 95%;
  height: 120rpx;
  position: absolute;
  top: 760rpx;
  left: 2.5%;
  box-shadow: 0 0 2px #fff;
  color: #fff;
  font-size: 0.7em;
}

.button-sp-area {
  margin: 0 auto;
  width: 60%;
  padding: 10rpx 0;
}

.lay {
  width: 95%;
  height: 120rpx;
  display: flex;
  margin: 16rpx auto;
}

.lay .title {
  width: 80rpx;
  height: 90rpx;
}

.lay .title_img {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
  display: block;
}

.lay .title_txt {
  position: relative;
  top: -6rpx;
  text-align: center;
  font-size: 0.7em;
  width: 80rpx;
}

.lay .content {
  box-shadow: 0 0 2px #fff;
  border-radius: 1rpx;
  width: 84%;
  height: 110rpx;
  margin-left: 30rpx;
  display: flex;
  padding: 0 8rpx;
}

.lay .item {
  width: 90rpx;
  padding: 5rpx 0;
  margin: 0 8rpx;
}

.lay .addv {
  width: 90rpx;
  height: 90rpx;
  margin: 0 8rpx;
}
