@import "../common/index.wxss";

.index {
  height: 100%;
  /* background-color: rgb(198, 226, 255); */
}

.head {
  height: 280rpx;
  width: 100%;
  background-color: #409eff;
  padding-top: 120rpx;
}

.head .img {
  height: 120rpx;
  width: 120rpx;
  overflow: hidden;
  display: block;
  border-color: white;
  border-radius: 50%;
  margin: 0 auto;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  margin-bottom: 70rpx;
}

.group {
  width: 93%;
  margin: 0 auto;
  height: 150rpx;
  background-color: white;
  z-index: 999;
  margin-top: -50rpx;
  box-shadow: 1px 1px 4px rgb(140, 197, 255);
  border-radius: 10rpx;
  margin-bottom: 80rpx;
  display: flex;
}

.group-img {
  width: 100rpx;
  height: 100rpx;
  margin: 25rpx;
}

.group-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 28rpx 0;
}

.group-txt {
  font-size: 0.9em;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 520rpx;
}

.index-bd {
  padding: 180rpx 30rpx 40rpx;
}

.weui-agree__link {
  display: inline;
  color: #586c94;
}

.advice {
  position: fixed;
  bottom: 15rpx;
  text-align: center;
  width: 100%;
  color: #1989fa;
  font-size: 0.8em;
}

.noGroup {
  width: 100%;
  color: #666;
  text-align: center;
  font-size: 0.8rem;
  margin-top: 200rpx;
}
